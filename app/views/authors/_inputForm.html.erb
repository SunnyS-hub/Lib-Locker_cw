
<%= render 'shared/errorMSG', obj: @author%>


<div class="row">
  <div class="col-xs-12">

      <%= form_for @author, :html => {class:"form-horizontal", role: "form"} do |s| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= s.label :name %>
          </div>
          <div class="col-sm-6">
            <%= s.text_field :name, class:"form-control", placeholder:"Enter name of author", autofocus:true%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-5">
            <%= s.submit class: "btn btn-primary btn-lg " %>
          </div>
        </div>
        <p>
          <div class="form-group">
            <div class="col-sm-offset-2  col-sm-4">
              <%= link_to "Back", authors_path, class: "btn btn-primary btn-lg"%>
            </div>
          </div>
        </p>
    <% end %>
  </div>
</div>
