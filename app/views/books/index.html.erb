<!DOCTYPE html>
<html>
  <head>
    <title>Books</title>
  </head>

  <body>
    <form class="navbar-form navbar-left" action="/search">
      <div class="form-group">
        <input type="text" class="form-control" name="wchBook" placeholder="Search Article" >
      </div>
      <button type="submit" class="btn btn-default">Search</button>
    </form>

<div class="blacktext panel panel-default">
  <!-- Default panel contents -->
    <div class="panel-heading"><span style="padding-left:200px;">Books Owned By Users
          <span style="padding-left:100px;"><%= link_to "Add new book",
          new_book_path, class: "btn btn-success" %>


    </div>
  <!-- Table -->
  <table class="table">

    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Description</th>
    </tr>
    <% @allBooks.each do |data| %>
    <tr class ="tableallignleft">
      <td><%= data.name %>  </td>
        <td><%= @author.find(data.author_id).name %>  </td>
      <td><%= data.description%>  </td>
      <td><%= link_to "Edit Info", edit_book_path(data) %></td>
      <td><%= link_to "Show Info", book_path(data) %></td>
      <td><%= link_to "Remove from collection", book_path(data), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>


  </table>

  </body>
</html>
