<h1>Edit book information</h1>

<% if @book.errors.any? %>
 <ul>
   <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>

    <% end %>
  </ul>
<% end %>

<%= form_for @book do |b| %>
  <p>
    <%= b.label :name%> </br>
    <%= b.text_field :name %>
  </p>

  <p>
    <%= b.label :author%> </br>
    <%= b.text_field :author %>
  </p>

  <p>
    <%= b.label :description%> </br>
    <%= b.text_area :description %>
  </p>

  <p>
    <%= b.submit%>
  </p>

<% end %>
