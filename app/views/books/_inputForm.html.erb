
<%= render 'shared/errorMSG', obj: @book%>

<div class="row">
  <div class="col-xs-12">

      <%= form_for @book, :html => {class:"form-horizontal", role: "form"} do |s| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= s.label :name %>
          </div>
          <div class="col-sm-6">
            <%= s.text_field :name, class:"form-control", placeholder:"Enter title of book", autofocus:true%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= s.label :author %>
          </div>
          <div class="col-sm-6">
            <!-- select all authors from the db and let user choose them from a dropdown-->
            <%= collection_select(:book, :author_id, Author.all,:id, :name, {}, {:multiple => false})%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= s.label :description %>
          </div>
          <div class="col-sm-6">
            <%= s.text_area :description, rows:"7",  class:"form-control",placeholder:"Enter article", autofocus:true%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-5">
            <%= s.submit class: "btn btn-primary btn-lg " %>
          </div>
        </div>
        <p>
          <div class="form-group">
            <div class="col-sm-offset-2  col-sm-4">
              <%= link_to "Back", books_path, class: "btn btn-primary btn-lg"%>
            </div>
          </div>
        </p>
    <% end %>
  </div>
</div>
